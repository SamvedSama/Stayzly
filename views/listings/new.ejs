<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-5">
    <div class="col-8 offset-2">
        <h1>Create Listing</h1>
        <br>
        <form action="/listings" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" placeholder="Add a Catchy Title" class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Title is mandatory.</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="description" placeholder="Describe more about this place" class="form-control" required></textarea>
                <div class="valid-feedback">Description looks good!</div>
                <div class="invalid-feedback">Please describe the listing.</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" name="image" placeholder="Attach Image URL" class="form-control" required>
                <div class="valid-feedback">Image URL looks good!</div>
                <div class="invalid-feedback">Image URL should be provided!</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="price" placeholder="1500" class="form-control" required>
                    <div class="valid-feedback">Price looks good!</div>
                    <div class="invalid-feedback">Price should be valid!</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="country" placeholder="India" class="form-control" required>
                    <div class="valid-feedback">Country looks good!</div>
                    <div class="invalid-feedback">Country should be valid!</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" placeholder="Bengaluru" class="form-control" required>
                <div class="valid-feedback">Location looks good!</div>
                <div class="invalid-feedback">Location should be valid!</div>
            </div>
            <button class="btn btn-dark add-btn mt-2">Add</button>
        </form>
        <br><br>
    </div>
</div>
<script src="/js/script.js"></script>